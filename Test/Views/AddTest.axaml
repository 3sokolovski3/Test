<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Test.ViewModels" 
             x:DataType="vm:AddTestViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Test.Views.AddTest">
   
   <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
            <Button Content="← Вернуться назад"
                    Command="{Binding NavigateBackCommand}"
                    Padding="10,5"
                    CornerRadius="5">
                <Button.Transitions>
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                    </Transitions>
                </Button.Transitions>
            </Button>
            
            <Button Content="➕добавить тест"
                    Command="{Binding ToggleTestCreationVisibilityCommand}"
                    Padding="10,5"
                    CornerRadius="5">
                <Button.Transitions>
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                    </Transitions>
                </Button.Transitions>
            </Button>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
        <!-- Список тестов -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Tests}" Margin="0,10">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#f5f5f5" 
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,5"
                            BorderBrush="#e0e0e0"
                            BorderThickness="1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Description}" 
                                           FontSize="14"
                                           Foreground="#666"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Content="➕Добавить вопрос "
                                    Command="{ReflectionBinding $parent[UserControl].DataContext.NavigateToAddQuestionsCommand}"
                                    CommandParameter="{Binding}"
                                    Padding="15,5"
                                    CornerRadius="5"
                                    VerticalAlignment="Center">
                                <Button.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                                    </Transitions>
                                </Button.Transitions>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer >
        <!-- Форма создания нового теста -->
         <Border Grid.Row="2"
                 IsVisible="{Binding IsTestCreationVisible}"
                Background="#f5f5f5"
                CornerRadius="8"
                Padding="15"
                Margin="0,5"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                >
            <StackPanel Spacing="10" >
                <TextBlock Text="Создание нового теста" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Название теста:" FontSize="14" Foreground="#666"/>
                    <TextBox Text="{Binding TestName}" 
                             FontSize="14" 
                             Padding="10,5"
                             Background="White"
                             BorderBrush="#e0e0e0"
                             BorderThickness="1"
                             CornerRadius="5"/>
                </StackPanel>
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Описание теста:" FontSize="14" Foreground="#666"/>
                    <TextBox Text="{Binding TestDescription}" 
                             FontSize="14" 
                             Padding="10,5"
                             Background="White"
                             BorderBrush="#e0e0e0"
                             BorderThickness="1"
                             CornerRadius="5"/>
                </StackPanel>
                
                <Button Content="Сохранить и добавить вопросы" 
                        Command="{Binding CreateTestCommand}"
                        Padding="15,5"
                        CornerRadius="5"
                        HorizontalAlignment="Right"
                        MinWidth="200"
                        Margin="0,10,0,0">
                    <Button.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                        </Transitions>
                    </Button.Transitions>
                </Button>
            </StackPanel>
        </Border>
        
        <!--<StackPanel Grid.Row="2" IsVisible="{Binding IsTestVisible}" Spacing="10" Margin="0,20">
            <TextBlock Text="Введите название теста" FontSize="16"/>
            <TextBox Text="{Binding TestName}" FontSize="14" Padding="10,5"/>
            
            <TextBlock Text="Введите описание теста" FontSize="16"/>
            <TextBox Text="{Binding TestDescription}" FontSize="14" Padding="10,5"/>
            
            <Button Content="Сохранить и добавить вопросы" 
                    Command="{Binding GoCreateTest}"
                    Padding="15,5"
                    CornerRadius="5"
                    HorizontalAlignment="Center"
                    MinWidth="200">
                <Button.Transitions>
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                    </Transitions>
                </Button.Transitions>
            </Button>    
        </StackPanel>-->
    </Grid>
</UserControl>

