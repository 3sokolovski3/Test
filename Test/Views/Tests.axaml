<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Test.ViewModels" 
             x:DataType="vm:TestsViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Test.Views.Tests">
  
    <Grid  RowDefinitions="Auto,*,Auto" Margin="10">
       
     
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
            <Button Content="➕ Создать новый тест или добавить вопрос"
                    Padding="10,5"
                    CornerRadius="5"
                    Command="{Binding GoCreateTest}">
                <Button.Transitions>
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                    </Transitions>
                </Button.Transitions>
            </Button>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Tests}" Margin="0,10">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#f5f5f5" 
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,5"
                            BorderBrush="#e0e0e0"
                            BorderThickness="1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Description}" 
                                           FontSize="14"
                                           Foreground="#666"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Content="Пройти тест ➔"
                                    Command="{ReflectionBinding $parent[UserControl].DataContext.GoTestCommand}"
                                    CommandParameter="{Binding}"
                                    Padding="15,5"
                                    CornerRadius="5"
                                    VerticalAlignment="Center">
                                <Button.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                                    </Transitions>
                                </Button.Transitions>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>
  
    </Grid>
  
</UserControl>
